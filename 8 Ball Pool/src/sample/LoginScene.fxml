<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="parent" prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.loginController">
    <children>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
              prefWidth="600.0" style="-fx-background-color: #2b2a4c;" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="8 BALL POOL" textFill="WHITE">
                            <font>
                                <Font name="Segoe Script" size="64.0"/>
                            </font>
                        </Label>
                        <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Cover%20Pics/ls.jpg"/>
                            </image>
                        </ImageView>
                        <HBox style="-fx-border-color: white; -fx-background-radius: 0;">
                            <VBox.margin>
                                <Insets left="50.0" right="50.0" top="10.0"/>
                            </VBox.margin>
                            <children>
                                <TextField fx:id="txtfield" alignment="BASELINE_LEFT" prefHeight="50.0"
                                           prefWidth="300.0" promptText="username"
                                           style="-fx-background-color: transparent; -fx-prompt-text-fill: #dedede; -fx-text-fill: white;"
                                           HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </TextField>
                                <Button mnemonicParsing="false" prefHeight="32.0"
                                        style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                                    <graphic>
                                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@images/user.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                        <HBox style="-fx-border-color: white; -fx-background-radius: 0;">
                            <children>
                                <PasswordField fx:id="passfield" alignment="BASELINE_LEFT" prefHeight="50.0"
                                               prefWidth="300.0" promptText="password"
                                               style="-fx-background-color: transparent; -fx-prompt-text-fill: #dedede; -fx-text-fill: white;"
                                               HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                </PasswordField>
                                <Button mnemonicParsing="false" prefHeight="32.0"
                                        style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                                    <graphic>
                                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@images/key.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets left="50.0" right="50.0" top="10.0"/>
                            </VBox.margin>
                        </HBox>
                        <Button fx:id="login" mnemonicParsing="false" prefHeight="40.0" prefWidth="83.0"
                                style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-radius: 30; -fx-background-insets: 0; -fx-text-fill: white;"
                                text="Login">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefWidth="250.0" spacing="20.0" style="-fx-background-color: #26283d;">
                    <children>
                        <Label text="Not signed up yet?" textFill="WHITE">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                        <Label layoutX="51.0" layoutY="340.0" text="Register now!!" textFill="WHITE">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                        <Button fx:id="register" mnemonicParsing="false" prefHeight="40.0" prefWidth="95.0"
                                style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-radius: 30; -fx-background-insets: 0; -fx-text-fill: white;"
                                text="Register">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</AnchorPane>
